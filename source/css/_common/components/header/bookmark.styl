.book-mark-link {
  border-bottom: none;
  color: #222;
  display: block;
  font-size: 32px !important;
  right: $b2t-position-right;
  position: fixed;
  top: -10px;
  transition: .3s;

  +tablet-mobile() {
    display: none !important;
  }
}

.book-mark-link:hover, .book-mark-link-fixed {
  top: -2px;
}
